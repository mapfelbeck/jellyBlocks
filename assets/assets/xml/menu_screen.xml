<?xml version="1.0" encoding="utf-8" ?>
<data>
	<include id="ui_globals"/>
	<sprite id="background" src="ui/menu" center_x="true" center_y="true" group="back">
        <scale to_height="100%"/>
    </sprite>
    
    <text name="title_text" use_def="title64" center_x="true" y="60pt" text="Jelly Blocks" width="550pt" />
    
    <text name="version_text" use_def="ui16" center_x="true" y="0pt" text="" width="400pt" border_color="0x000000">
        <anchor x="center" x-flush="center" y="bottom" y-flush="bottom"/>
    </text>
    
    <anchor x="center" x-flush="center" y="top" y-flush="center"/>
    
    <button id="play_btn" use_def="ui_btn_lg" center_x="true" label="Play!">
        <param type="string" value="play"/>
    </button>
    
	<button id="settings_btn" use_def="ui_btn_lg" center_x="true" width="190pt" label="Settings">
		<param type="string" value="settings"/>
	</button>

    <align axis="vertical" spacing="20">
        <anchor x-flush="center"/>
		<objects value="play_btn,settings_btn"/>
		<bounds top="45%" bottom="75%"/>
	</align>
</data>