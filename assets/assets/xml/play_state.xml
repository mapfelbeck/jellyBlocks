<?xml version="1.0" encoding="utf-8"?>
<data>
    <include id="ui_globals" />
    <sprite id="background" src="ui/gameplay1" center_x="true" center_y="true" group="back">
        <scale to_height="100%" />
    </sprite>
    
    <inject name="plugins/score" />
    
    <button id="pause_btn" width="36pt" height="36pt">
        <anchor x="right" x-flush="right" y="top" y-flush="top"/>
        <graphic id="all" image="ui/pause_button" slice9="24,24,50,50" x-flush="center">
            <scale_src scale="0.5" />
        </graphic>
        <param type="string" value="pause" />
    </button>
    
    <chrome id="preview_background" src="ui/square_tile" slice9="22,22,234,234" x="5pt" y="15pt" width="80pt" height="80pt">
        <scale_src scale="0.5"/>
	</chrome>
    
    <chrome id="rotate_background" src="ui/square_tile" slice9="22,22,234,234" x="70%" y="30pt" width="60pt" height="60pt">
        <scale_src scale="0.5"/>
	</chrome>
</data>
