<?xml version="1.0" encoding="utf-8" ?>
<data>
	<include id="ui_globals"/>
    
    <sprite id="black" x="0" y="0" width="100%" height="100%" color="0x88000000"/>
    
	<chrome id="background" src="ui/popup_background" slice9="25,25,375,175" x="0" y="210pt" width="400pt" height="200pt">
		<anchor x="center" x-flush="center" y="top" y-flush="center"/>
	</chrome>
    
	<button id="close" use_def="close_btn" x="-8pt" y="5pt">
        <anchor x="background.right" y="background.top" x-flush="right" />
	</button>
    
    <button id="restart_btn" use_def="ui_btn_md" label="Restart">
		<param type="string" value="restart"/>
	</button>
    
	<button id="main_menu_btn" use_def="ui_btn_md" label="Main Menu">
		<param type="string" value="main_menu"/>
	</button>
    
	<button id="settings_btn" use_def="ui_btn_md" label="Settings">
		<param type="string" value="settings"/>
	</button>
    
    <align axis="vertical">
        <anchor x="background.center" x-flush="center" />
		<objects value="restart_btn,main_menu_btn,settings_btn"/>
		<bounds top="background.top+15pt" bottom="background.bottom-15pt"/>
	</align>
</data>